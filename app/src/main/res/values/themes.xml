<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BullsCows" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_main</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_field</item>
        <item name="android:textColor">@color/text</item>

        <!-- Change edit color here. -->

        <!-- This will change NumberPicker style -->
        <item name="android:editTextStyle">@style/PickerStyle</item>
    </style>

    <style name="PickerStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>
</resources>